{
  "name": "mct",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "clean": "rimraf dist",
    "build": "cross-env MODE=production npm-run-all clean compile _build:noinstaller",
    "build:installer": "cross-env MODE=production npm-run-all clean compile _build:installer",
    "start": "node scripts/watch.js",
    "dev": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,tsx",
    "compile": "node scripts/build.js",
    "_build:installer": "electron-builder",
    "_build:noinstaller": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "test": "node tests/app.spec.js",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer"
  },
  "browserslist": [
    "Chrome 94"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.0",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cross-env": "^7.0.3",
    "electron": "15.1.1",
    "electron-builder": "22.11.7",
    "electron-devtools-installer": "3.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "11.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "2.6.1",
    "typescript": "4.4.2",
    "vite": "2.6.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@types/react-router-dom": "^5.3.1",
    "electron-updater": "4.6.0",
    "fast-glob": "^3.2.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "sass": "^1.42.1"
  },
  "build": {
    "appId": "mct",
    "productName": "mct",
    "files": [
      "packages/**/dist/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/mct.png"
    }
  }
}
